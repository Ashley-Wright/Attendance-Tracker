!!!
%html
  %head
    %title AttendanceTracker
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    - if current_user
      %p= link_to 'Sign Out', destroy_user_session_path, method: :delete
      %p= link_to 'Add Students', new_student_path
    - else
      %p= link_to 'Sign Up', new_user_registration_path
      %p= link_to 'Sign In', new_user_session_path
    .alert= alert
    .notice= notice
    = yield
